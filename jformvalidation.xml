	<authorEmail>suporte@uaigo.com.br</authorEmail>
	<authorUrl>www.uaigo.com.br</authorUrl>
	<version>0.0.1</version>
	<description>PLG_JFORMVALIDATION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="jformvalidation">jformvalidation.php</filename>                
		<filename>index.html</filename>                               
                <folder>language</folder>
                <folder>media</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic">
                             <field name="list_forms_field_validation"
                                    type="Repeatable"
                                    icon="list"
                                    description="PLG_CONTENT_JFORMVALIDATION_LIST_FIELDS_FORM_DESC"
                                    label="PLG_CONTENT_JFORMVALIDATION_LIST_FIELDS_FORM_LABEL"
                                    >
                                    <fields name="params">
                                    <fieldset hidden="true" name="list_forms_field_validation_modal" repeat="true" label="PLG_SYSTEM_K2EXTENDUSERGROUPPERMISSIONS_LIST_FIELDS_PERMISSIONS_TAB_LABEL">
                                            <field name="context"
                                                    label="PLG_CONTENT_JFORMVALIDATION_CONTEXT_LABEL"
                                                    size="30"
                                                   type="list"
                                                   multiple='false'> 
                                                <option value='com_contact.contact'>PLG_CONTENT_JFORMVALIDATION_CONTEXT_CONTACT_LABEL </option>
                                            
                                            </field>
                                            <field name="class"
                                                    label="PLG_CONTENT_JFORMVALIDATION_CLASS_LABEL"
                                                    size="30"
                                                    type="text" />
                                            <field name="field_name"
                                                    label="PLG_CONTENT_JFORMVALIDATION_FIELD_NAME_LABEL"
                                                    size="30"
                                                    type="text" />
                                            <field name="validate"
                                                    label="PLG_CONTENT_JFORMVALIDATION_VALIDATE_LABEL"
                                                    size="30"
                                                    type="list"
                                                    multiple='false'>
                                                <option value='tel'>PLG_CONTENT_JFORM_VALIDATION_VALIDATE_TEL_LABEL</option>
                                            </field>
                                            <field name="msg_return"
                                                    label="PLG_CONTENT_JFORMVALIDATION_MESSAGE_RETURN_LABEL"
                                                    size="30"
                                                    type="text" />
                                    </fieldset>

                                    </fields>
                            </field>
			</fieldset>

		</fields>
	</config>
</extension>
